<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../layout/head.ejs %>
</head>
<body onload="initIns();getLocation()">
<header>
    <% include ../layout/header.ejs %>
</header>
<div class="container text-center">

    <div class="offline_div text-center" id="offline_div" style="display: none">You are offline</div>

    <div class="form-group mt-3">
        <label for="new_event_title">Title</label>
        <input type="text" name="title" class="form-control mb-3" id="new_event_title"
               placeholder="Let's share something new~">
        <label for="new_event_content">Content</label>
        <textarea name="content" class="form-control mb-3" rows="5" cols="20" id="new_event_content"
                  placeholder="Let's share something new~"></textarea>
        <button type="submit" class="btn btn-primary" onclick="postNewEvent()">Post</button>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="locationCheck">
        <label class="form-check-label" for="locationCheck">
            Use my location
        </label>
    </div>

    <div class="select">
        <label for="videoSource">Video source: </label><select id="videoSource"></select>
    </div>

    <div class="text-center">
        Click video to capture.
    </div>

    <div id="video-stream" onclick="snapshot()">
        <video muted autoplay></video>
    </div>

    <div id="snapshot-show" style="display: none;" onclick="snapshot()">
        <img src="" alt="" class="img-fluid">
        <canvas style="display: none;"></canvas>
    </div>

    <script src="/scripts/new_story_event.js"></script>

</div>
<footer>
    <% include ../layout/footer.ejs %>
</footer>
</body>
</html>